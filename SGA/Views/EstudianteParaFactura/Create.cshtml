@model SGA.Models.EstudianteParaFactura

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EstudianteParaFactura</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Estudiante: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EstudianteId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EstudianteId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div>
            @Html.ActionLink("Añadir nuevo estudiante", "Create", "Estudiante")
        </div>

        <div class="form-group">
            Cursos
            <div class="col-md-offset-2 col-md-10">
                <table>
                    <tr>
                        @{
                            int cnt = 0;
                            List<SGA.ViewModels.AsignarTituloEstudiante> titulos = ViewBag.Titulos;

                            foreach (var titulo in titulos)
                            {
                                if (cnt++ % 3 == 0)
                                {
                                    @:</tr><tr>
                        }
                                @:<td>
                                    <input type="checkbox"
                                           name="titulosSeleccionados"
                                           value="@titulo.TituloId"
                                           @(Html.Raw(titulo.Asignado ? "checked=\"checked\"" : "")) />
                                        @titulo.TituloId @:  @titulo.Nombre  @titulo.Precio
                                        @:</td>
                       }
                            @:</tr>
                        }
                    </table>
                </div>
            </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver Atrás", null, null, null, new { href = Request.UrlReferrer })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
