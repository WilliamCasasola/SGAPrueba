<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PROMiDAT</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PROMiDAT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:#C8B02D" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home",null,new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Administradores", "Index", "Administrador", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Estudiantes", "Index", "Estudiante", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Tutores", "Index", "Tutor", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Titulos", "Index", "Titulo", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Cursos", "Index", "Curso", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Generaciones", "Index", "Generacion", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Matriculas", "Index", "Matricula", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Cliente", null, new { style = "color:#C8B02D" })</li>
                    <li>@Html.ActionLink("Facturas", "Index", "Factura", null, new { style = "color:#C8B02D" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PROMiDAT</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
